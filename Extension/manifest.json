{
  "manifest_version": 2,

  "name": "DAGR Saver",
  "description": "Create a DAGR from any webpage.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "DAGR Saver",
   "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js", "popup.js"]
  },
  "permissions": ["activeTab", "tabs", "http://www.bagelcron.com/php/responses/getdagrs.php", 
        "http://www.bagelcron.com/php/responses/parsehtml.php"]
}
